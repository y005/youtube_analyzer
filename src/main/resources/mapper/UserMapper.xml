<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.project01.youtube.mapper.UserMapper">
    <select id="findByUserId" resultType="com.example.project01.youtube.model.User">
        select *
        from user
        where id = #{user_id};
    </select>

    <insert id="save" parameterType="com.example.project01.youtube.model.User" >
        insert into user(id, password, roles)
        values(#{param.id}, #{param.password}, #{param.role});
    </insert>

    <select id="findByUserIdWithPassword" resultType="com.example.project01.youtube.model.User">
        select *
        from user
        where id = #{user_id}
        <if test="user_password != null">
            and password = #{user_password}
        </if>;
    </select>

    <select id="getEveryUser" resultType="com.example.project01.youtube.model.User">
        select *
        from user
        limit #{limit}
        offset #{offset};
    </select>
</mapper>